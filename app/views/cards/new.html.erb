<%= form_with  url: cards_path, id: 'charge-form', class: 'card-form',local: true do |f| %>
<div class="Cardpage">
    <h1>カード登録</h1>
  </div><br>
  <div class='form-wrap'>
    <%= f.label :number, "【カード番号】" %>
    <%= f.text_field :number, id:"card-number", name:"buyer_address[number]", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
  </div>
  <div class='form-wrap'>
    <%= f.label :cvc ,"【ＣＶＣ】" %>
    <%= f.text_field :cvc, id:"card-cvc", name:"buyer_address[cvc]", placeholder:"カード背面にある3桁の番号", maxlength:"4" %>
  </div>
  <div class='form-wrap'>
  <br>
    <p>【有効期限】</p>
    <div class='input-expiration-date-wrap'>
      <%= f.select :exp_month, 1..12, {include_blank: "---"},name:"buyer_address[exp_month]", id: "card-exp-month" %>
      <p>月</p>
      <%= f.select :exp_year, 20..25, {include_blank: "---"},name:"buyer_address[exp_year]", id: "card-exp-year" %>
      <p>年</p>
    </div>
  </div>
  <%= f.submit "登録する" , class:"button" , id:"button" %>
<% end %>
